{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Start Eureka Server",
        "Start Config Server",
        "Starting Others"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Eureka Server",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/eureka-server"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*$"
        }
      }
    },
    {
      "label": "Start Config Server",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/config-server"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*$"
        }
      }
    },
    {
      "label": "Starting Others",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Order Service",
        "Start Product Service",
        "Start Gateway Service"
      ]
    },
    {
      "label": "Start Order Service",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/order-service"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*$"
        }
      }
    },
    {
      "label": "Start Product Service",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/product-service"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*$"
        }
      }
    },
    {
      "label": "Start Gateway Service",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/gateway-service"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*$"
        }
      }
    },
    {
      "label": "Wait for Eureka",
      "type": "shell",
      "command": "sleep",
      "args": ["5"],
      "windows": {
        "command": "timeout",
        "args": ["5"]
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Wait for Config",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-File",
        "${workspaceFolder}/.vscode/wait-for-config-server.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
